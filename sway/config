set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term alacritty
set $menu dmenu_path | wofi --show drun -i | xargs swaymsg
set $browser google-chrome-stable

set $scnshot grim -g "$(slurp -d)" - | wl-copy
set $lockman exec bash ~/.config/sway/lockman.sh

# autostart
exec alacritty && sway '[app_id="alacritty"]' move container to workspace 1


set $bg 	            #83A598
set $bg-inactive        #323232
set $bg-urgent          #000000
set $text               #eeeeec
set $text-inactive      #babdb6

set $bar                #323232
set $statusline         #e0e0e0

client.focused          $bg             $bg             $text            $bg   $bg
client.unfocused        $bg-inactive    $bg-inactive    $text-inactive   $bar  $bar
client.focused_inactive $bg-inactive    $bg-inactive    $text-inactive   $bar  $bar
client.urgent           $bg-urgent      $bg-urgent      $text            $bar  $bar

