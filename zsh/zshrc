#alias vim='nvim'
alias vi='nvim'

alias luamake="$HOME/tools/lua-language-server/3rd/luamake/luamake"

alias cth="nmcli connection up HomeVPN --ask"
alias dfh="nmcli connection down HomeVPN"

# opam configuration
[[ ! -r /home/fabiancodes/.opam/opam-init/init.zsh ]] || source /home/fabiancodes/.opam/opam-init/init.zsh  > /dev/null 2> /dev/null
