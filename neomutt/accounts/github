# vim: filetype=muttrc

unmailboxes *

set mbox_type 		= Maildir
set folder 			= "~/.local/share/mail/github@fabianspecht.xyz"

set sendmail 		= "msmtp -a github@fabianspecht.xyz"

set spoolfile		= "+INBOX"
set record 			= "+Sent"
set trash 			= "+Trash"
set postponed 		= "+Drafts"

set realname 		= "Fabian Specht"
set from 			= "github@fabianspecht.xyz"

set signature		= "~/.config/neomutt/signature"

mailboxes 			=INBOX =Sent =Trash =Drafts =Junk

macro index S "<shell-escape>mbsync -V github@fabianspecht.xyz<enter><shell-escape>notmuch new<enter>" "sync email"

set crypt_use_gpgme=yes
set crypt_autosign=yes
set crypt_verify_sig=yes
set crypt_replysign=yes
set crypt_replyencrypt=yes
set crypt_replysignencrypted=yes
set crypt_autoencrypt = yes


set pgp_default_key="07C36475A5C750C199A7D1CD8BD4621E4A78BA57"
set pgp_check_gpg_decrypt_status_fd
set pgp_use_gpg_agent = yes
set pgp_self_encrypt = yes
